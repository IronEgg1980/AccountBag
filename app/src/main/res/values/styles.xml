<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="RecordItemTitleTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@color/colorExtraTextTitleBG</item>
    </style>
    <style name="RecordItemContentTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="GroupShapeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/item_group_shape</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="MainItemShapeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/item_group_shape</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <attr name="not_touched_color" format="color"/>
    <attr name="touched_color" format = "color"/>
    <attr name = "validate_failed_color" format="color"/>
    <attr name = "validate_success_color" format = "color"/>
    <attr name = "count" format = "integer"/>
    <attr name = "max_time" format="integer"/>

    <declare-styleable name = "GestureView">
        <attr name="not_touched_color"/>
        <attr name="touched_color"/>
        <attr name = "validate_failed_color"/>
        <attr name = "validate_success_color"/>
        <attr name = "count"/>
        <attr name = "max_time"/>
    </declare-styleable>

</resources>
